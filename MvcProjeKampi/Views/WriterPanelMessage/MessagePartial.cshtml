
<div class="col-md-3">
    <a href="/WriterPanelMessage/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <i class="right fas fa-angle-left"></i>
                        <span class="badge bg-primary float-right">@ViewBag.countInbox</span>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/WriterPanelMessage/ReadMessages/" class="nav-link">
                                <i class="fas fa-inbox"></i>Okunmuş Mesajlar
                                <span class="badge bg-primary float-right">@ViewBag.countRead</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanelMessage/UnReadMessages/" class="nav-link">
                                <i class="fas fa-inbox"></i>Okunmamış Mesajlar
                                <span class="badge bg-primary float-right">@ViewBag.countUnRead</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.countSendbox</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Draftbox/" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-right">@ViewBag.countDraftbox</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Trashbox/" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-primary float-right">@ViewBag.countTrashbox</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>

</div>
