@model EntityLayer.Concrete.Writer

@{
    Layout = null;
}

<!Doctype html>
<html lang="en">
<head>
    <title>MVC Proje Kampı</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/AdminLTE-3.0.4/login-form-20/css/style.css">

    <!-- Bootstrap-Core-CSS -->
    <link href="~/AdminLTE-3.0.4/web/css/simpleLightbox.css" rel='stylesheet' type='text/css' />
    <link href="~/AdminLTE-3.0.4/web/css/roadmap.css" rel="stylesheet" type="text/css" />
    <!-- Banner-Slider-CSS -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/web/css/snow.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/web/css/style.css" type="text/css" media="all" />
    <!-- Style-CSS -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/web/css/fontawesome-all.css">

</head>
</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/web/images/bg.jpg);">
    <!-- mian-content -->
    <header class="index-banner" id="home">
        <!-- nav -->
        <nav class="main-header d-flex">
            <div id="brand">
                @*<div id="logo">
                    <a href="/Home/HomePage/">
                        <i class="fas fa-crosshairs"></i>
                    </a>
                </div>*@
                @*<div id="word-mark">
                    <h1>
                        <a href="/Home/HomePage/">MVC Sözlük</a>
                    </h1>
                </div>*@
            </div>
            <div class="clearfix"></div>
        </nav>
        <!-- //nav -->
        <!-- banner -->
        <div class="snow-container">
            <div class="snow foreground"></div>
            <div class="snow foreground layered"></div>
            <div class="snow middleground"></div>
            <div class="snow middleground layered"></div>
            <div class="snow background"></div>
            <div class="snow background layered"></div>
        </div>

        <!-- //banner -->
    </header>
    <!-- //header -->
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Üye Kayıt Ekranı</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @using (Html.BeginForm("WriterRegister", "Register", FormMethod.Post))
                        {
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @placeholder = "Adınız" })
                            @Html.ValidationMessageFor(x => x.WriterName)

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control", @placeholder = "Soyadınız" })
                            @Html.ValidationMessageFor(x => x.WriterSurName)

                        </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @placeholder = "Mail Adresiniz" })
                                @Html.ValidationMessageFor(x => x.WriterMail)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterPassWord, new { @class = "form-control", @placeholder = "Şifre", Type = "password" })
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name2="WriterPassWord2" type="password" class="form-control" placeholder="Şifre Tekrar" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Kaydet</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>

